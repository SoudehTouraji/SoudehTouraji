<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_sample_wonder">

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_item_wonder_suggestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:sriv_left_bottom_corner_radius="@dimen/padding_10dp"
        app:sriv_left_top_corner_radius="@dimen/padding_10dp"
        app:sriv_right_bottom_corner_radius="@dimen/padding_10dp"
        app:sriv_right_top_corner_radius="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_20dp"
        />

    <TextView
        android:id="@+id/tv_name_wonder_suggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_item_wonder_suggestion"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_wonder_suggestion"
        app:layout_constraintRight_toRightOf="@id/iv_item_wonder_suggestion"
        android:gravity="right"
        android:textStyle="bold"
        android:textColor="@color/green_caribbean"
        android:textSize="@dimen/font_16sp"
        android:layout_marginTop="@dimen/padding_10dp"
        />
    
    <TextView
        android:id="@+id/tv_description_item_wonder_suggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_wonder_suggestion"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_wonder_suggestion"
        app:layout_constraintRight_toRightOf="@id/iv_item_wonder_suggestion"
        android:layout_marginTop="@dimen/padding_10dp"
        android:textStyle="bold"
        android:textColor="@color/green_caribbean"
        android:textSize="@dimen/font_13sp"
        android:gravity="right"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_old_price_item_wonder_suggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_description_item_wonder_suggestion"
        app:layout_constraintLeft_toLeftOf="@id/iv_item_wonder_suggestion"
        app:layout_constraintRight_toLeftOf="@id/tv_discount_item_wonder_suggestion"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginRight="@dimen/padding_5dp"
        android:textStyle="bold"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/font_10sp"
        android:gravity="right"
        app:layout_constraintWidth_percent="0.6"
        android:foregroundGravity="left"
        />

    <TextView
        android:id="@+id/tv_discount_item_wonder_suggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_description_item_wonder_suggestion"
        app:layout_constraintRight_toRightOf="@id/iv_item_wonder_suggestion"
        app:layout_constraintLeft_toRightOf="@id/tv_old_price_item_wonder_suggestion"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginLeft="@dimen/padding_5dp"
        android:textStyle="bold"
        android:textColor="@color/strong_pink"
        android:textSize="@dimen/font_16sp"
        app:layout_constraintWidth_percent="0.3"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>