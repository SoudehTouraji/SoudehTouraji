<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_light"
    tools:context=".Activity.Splash.SplashActivity">

    <ImageView
        android:id="@+id/iv_logo_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.4"/>
    <TextView
        android:id="@+id/tv_slogan_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_splash"
        app:layout_constraintLeft_toLeftOf="@id/iv_logo_splash"
        app:layout_constraintRight_toRightOf="@id/iv_logo_splash"
        android:textSize="@dimen/font_16sp"
        android:textColor="@color/green_caribbean"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/padding_10dp"
        android:text="@string/slogan"
        />

</androidx.constraintlayout.widget.ConstraintLayout>